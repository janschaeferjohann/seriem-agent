<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="urn:kwsoft:mtext:tonic:simpledom" targetNamespace="urn:kwsoft:mtext:tonic:simpledom" elementFormDefault="qualified">
	
	<!-- Enum -->	
	<xs:simpleType name="BackgroundThroughSpacingEnumType">
	 <xs:restriction base="xs:string">
	 	<xs:enumeration value="always">
	 	<xs:annotation><xs:documentation>The background color will be used to fill the gaps occupied by spaceBefore/spaceAfter.</xs:documentation></xs:annotation>
	 	</xs:enumeration>
	 	<xs:enumeration value="never">
	 	<xs:annotation><xs:documentation>The background color will not be used to fill the gaps occupied by spaceBefore/spaceAfter.</xs:documentation></xs:annotation>
	 	</xs:enumeration>
	 	<xs:enumeration value="auto">
	 	<xs:annotation><xs:documentation>The gaps occupied by spaceBefore/spaceAfter is filled by the background color only if the background of the preceding/next element is filled as well.</xs:documentation></xs:annotation>
	 	</xs:enumeration>
  	 </xs:restriction>
	</xs:simpleType>
	<!-- /Enum -->
	
</xs:schema>